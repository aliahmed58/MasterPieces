<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/public/global.css" />
    <link rel="stylesheet" href="/public/forms.css">
    <title>Add Customer</title>
</head>

<body>

    <%- include ('../partials/navbar') %>

        <form>
            <div class="container">
                <div class="row">
                    <div class="form-group col-sm-3">
                        <label for="inputName">Customer Name</label>
                        <input type="text" class="form-control" id="inputName" placeholder="Name">
                    </div>
                    <div class="form-group col-sm-9">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="Address">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col">
                        <label for="inputDesc">Description</label>
                        <input type="text" class="form-control" id="inputDesc" placeholder="Description">
                    </div>
                </div>

                <div class="row">

                    <div class="form-group col-sm-5">
                        <label for="inputCateogry">Category</label>
                        <input type="text" class="form-control" id="inputCateogry" placeholder="Category">
                    </div>

                    <div class="form-group col-sm-5">
                        <label for="inputDisc">Discount</label>
                        <input type="text" class="form-control" id="inputDisc" placeholder="Description">
                    </div>

                    <div class="form-group col-sm-2">
                        <label for="inputDOB"></label>
                        <input type="submit" class="submitbtn form-control" id="inputDOB">
                    </div>
                </div>

            </div>
            </div>
        </form>


</body>

</html>